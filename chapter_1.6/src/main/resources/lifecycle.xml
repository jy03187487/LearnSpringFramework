<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="annotationInit" default-destroy-method="annotationDestroy">

    <bean id="annotationBean" class="examples.AnnotationBean"/>
    <bean id="interfaceBean" class="examples.InterfaceBean"/>
    <bean id="xmlBean" class="examples.XmlBean" init-method="init" destroy-method="cleanup"/>

</beans>